            font-size: 28px;
            font-weight: 500;
            line-height: 34px;
            letter-spacing: 0em;
            text-align: left;

        }

        .package {
            display: flex;
            justify-content: space-around;
            margin-bottom: 10px;
        }

        .details {
            display: flex;
            justify-content: space-between;
        }

        .price-table {
